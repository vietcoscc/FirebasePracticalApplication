<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.viet.firebasepracticalapplication.activity.CardFragment">
    <LinearLayout
        android:layout_margin="-100dp"
        android:orientation="vertical"
        android:padding="@dimen/default_padding"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_header_shadow"></LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/grey_100"
            android:minHeight="@dimen/recycler_view_min_height" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/shape_footer_shadow"
            android:elevation="100dp">

            <TextView
                android:maxLength="10"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/selector_button_login_press"
                android:gravity="center"
                android:text="@string/app_name" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
